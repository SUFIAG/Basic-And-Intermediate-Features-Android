<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/quizques"
    android:layout_height="match_parent"
    tools:context=".QuizQuestion1">

    <TextView
        android:id="@+id/textView121"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="51dp"
        android:fontFamily="serif"
        android:text="Q.1: Java Is A Dynamic Programming Language?"
        android:textAlignment="center"
        android:textColor="#F39797"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="sans" />

    <RadioGroup
        android:layout_width="356dp"
        android:layout_height="224dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="285dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="True"
            android:textColor="#46F307"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="False"
            android:textColor="#46F307"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RadioGroup>

    <Button
        android:id="@+id/button830"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/otp_login_button"
        android:text="Next Question"
        android:textStyle="bold|italic"
        android:typeface="serif" />

</RelativeLayout>