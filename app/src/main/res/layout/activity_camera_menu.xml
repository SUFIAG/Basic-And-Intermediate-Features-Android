<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/camera"
    tools:context=".CameraMenu">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="37dp"
        android:fontFamily="serif"
        android:text="Camera Menu"
        android:textAlignment="center"
        android:textColor="#098EB6"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/button800"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="88dp"
        android:background="@drawable/gmail_login_button"
        android:text="Image Capture"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/button801"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="264dp"
        android:background="@drawable/offline_login_button"
        android:text="Record Video"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/button802"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/otp_login_button"
        android:text="Back"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:typeface="serif" />
</RelativeLayout>